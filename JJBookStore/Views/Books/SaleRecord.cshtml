@model IList<JJBookStore.ViewModels.SaleRecordViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count > 0)
{
    <h2>Sales Record for:</h2>
    <h4>@Model[0].Title</h4>
    <br /><br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Buyer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Quentity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PurchaseTime)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Buyer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quentity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseTime)
                </td>
            </tr>
        }

    </table>
}
<p>
    <a href="javascript:history.back()">Go Back</a>
</p>
