<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
</head>
<body>
    <script>
        @Html.Raw(TempData["Msg"])
    </script>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("JJ BOOK STORE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle"
                               data-toggle="dropdown">@Html.Encode(User.Identity.Name)</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("My Profile", "Details", "Users")</li>
                                <li>@Html.ActionLink("My Shopping Cart", "ViewShopCart", "ShopCarts")</li>
                                <li>@Html.ActionLink("Sell Book", "SellingBook", "Books")</li>
                                <li>@Html.ActionLink("My Purchased", "PurchaseIndex", "Purchaseds")</li>
                                <li>@Html.ActionLink("Change Password", "ChangePwd", "Users")</li>
                                <li>@Html.ActionLink("Edit Profile", "Edit", "Users")</li>
                                <li>@Html.ActionLink("Sign Out", "SignOut", "Users", null, new { onclick = "return confirm('Do you really want to log out?')" })</li>
                            </ul>
                        </li>
                    }
                    else
                    {

                        <li>@Html.ActionLink("Sign In", "SignIn", "Users") </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>


    <footer class="footer2">
        
            <div class="container">
                <div class="row">
                    <div class="col-md-6 widget">
                            <p>
                                <a class="active" href="#">Home</a> |
                                <a href="advancedSearch.jsp">AdvancedSearch</a>
                                |<a href="login.jsp">Sign In</a>
                            </p>
                    </div>
                    <div class="col-md-6 widget">
                            <p class="text-right">
                                Copyright &copy; 2015, Designed by
                                DuangDuang
                            </p>
                    </div>
                </div>
                <!-- /row of widgets -->
            </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
